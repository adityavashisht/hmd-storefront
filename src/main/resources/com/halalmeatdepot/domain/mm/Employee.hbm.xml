<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>


    <class name="com.halalmeatdepot.domain.mm.Employee" table="EMPLOYEE">
        <id name="id" column="EMPLOYEE_ID" type="long">
            <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
                <param name="sequence_name">EMP_SEQ</param>
            </generator>
        </id>

        <property name="name" column="EMP_NAME" length="255"/>

        <!-- Inverse = false means that the "Employee" is the owner of the association and therefore
             the updates will cascade to the child projects)
             -->


        <!-- https://www.mkyong.com/hibernate/inverse-true-example-and-explanation/
        -->
        <!-- INverse = true, means that the owning side is not "this" side, and casacde will not go through-->
        <set name="projects" inverse="false" cascade="all" table="EMPLOYEE_PROJECT">
            <key column="EMPLOYEE_ID"/>
            <many-to-many column="PROJECT_ID" class="com.halalmeatdepot.domain.mm.Project"/>
        </set>


    </class>



</hibernate-mapping>