<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>


    <class name="com.halalmeatdepot.domain.design.tpsc.Activity" table="ACTIVITY">
        <id name="id" column="ACTIVITY_ID" type="long">
            <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
                <param name="sequence_name">ACT_SEQ</param>
            </generator>
        </id>

        <property name="createDate" column="CREATE_DATE"/>
        <property name="updateDate" column="UPDATE_DATE"/>


        <joined-subclass name="com.halalmeatdepot.domain.design.tpsc.UpActivity" table="UP_ACTIVITY">
            <key>
                <column name="ACTIVITY_ID"/>
            </key>
            <property name="name" column="NAME"/>
            <property name="selectDate" column="SELECT_DATE"/>
        </joined-subclass>

        <joined-subclass name="com.halalmeatdepot.domain.design.tpsc.DownActivity" table="DOWN_ACTIVITY">
            <key>
                <column name="ACTIVITY_ID"/>

            </key>
            <property name="name" column="NAME"/>
            <property name="signal" type="yes_no"/>
        </joined-subclass>

    </class>


</hibernate-mapping>